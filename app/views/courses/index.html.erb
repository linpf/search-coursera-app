  <table  class="table table-bordered table-hover" >
    <tr>
    	<th>Image</th>
    	<th>Name</th>
    	<th>Description</th>
    </tr>

    <% if @courses %>
      <% @courses.each do |course| %>
        <tr class=<%= cycle('success', 'warning') %>>
          <td><%= image_tag(course["smallIcon"])%></td>
          <td><%= course["name"] %></td>
          <td><%= course["shortDescription"] %></td>
        </tr>
      <% end %>

    <% end %>
  </table>

